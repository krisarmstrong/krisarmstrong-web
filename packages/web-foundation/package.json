{
  "name": "@krisarmstrong/web-foundation",
  "version": "0.9.11",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/krisarmstrong/web-foundation"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./src/test-utils": "./src/test-utils/index.ts",
    "./src/base.css": "./src/base.css",
    "./src/themes/wifivigilante.css": "./src/themes/wifivigilante.css",
    "./src/themes/intrinsic.css": "./src/themes/intrinsic.css",
    "./src/themes/krisarmstrong.css": "./src/themes/krisarmstrong.css"
  },
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsup --dts --sourcemap --format esm,cjs --out-dir dist --metafile",
    "dev": "tsup --dts --watch --format esm,cjs --out-dir dist",
    "lint": "eslint src --ext .ts,.tsx --ignore-pattern '**/*.stories.tsx' && tsc --noEmit",
    "lint:fix": "eslint src --ext .ts,.tsx --ignore-pattern '**/*.stories.tsx' --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "bundle:analyze": "esbuild-visualizer --metadata ./dist/metafile-esm.json --filename ./dist/bundle.html",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "!(*.stories).{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "bash -c 'tsc --noEmit'"
    ],
    "*.stories.tsx": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "@sentry/react": "^10.28.0",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-docs": "^10.1.3",
    "@storybook/addon-onboarding": "^10.1.3",
    "@storybook/react-vite": "^10.1.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "audit-ci": "^7.1.0",
    "esbuild-visualizer": "^0.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-storybook": "^10.1.3",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "storybook": "^10.1.3",
    "tailwindcss": "^4.1.17",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "4.0.15"
  },
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.1.1",
    "dompurify": "^3.3.0",
    "fuse.js": "^7.1.0"
  }
}
